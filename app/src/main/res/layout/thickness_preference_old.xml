<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:padding="6dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Thickness of side boxes. (Default: 20)"
            android:id="@+id/textView" android:layout_gravity="center_horizontal"
            android:enabled="true"
            android:layout_marginTop="3dp"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:id="@+id/checkBox"
                android:layout_alignParentBottom="false"
                android:layout_alignRight="@+id/thicknessSeekBar"
                android:layout_alignEnd="@+id/thicknessSeekBar"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:checked="true"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        <SeekBar
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:id="@+id/thicknessSeekBar" android:layout_gravity="center_horizontal" android:progress="10"
                android:max="30" android:indeterminate="false"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/thicknessValueText"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="20"
                android:id="@+id/thicknessValueText" android:layout_gravity="center_horizontal"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false"
                android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

        <SeekBar
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:layout_gravity="center_horizontal"
                android:progress="10"
                android:max="30"
                android:enabled="false"
                android:indeterminate="false"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textView3"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="20"
                android:id="@+id/textView3"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false"
                android:layout_centerVertical="true"
                android:enabled="false"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Bottom"
                android:id="@+id/textView4"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_centerVertical="true"
                android:enabled="false"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

        <SeekBar
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar2"
                android:layout_gravity="center_horizontal"
                android:progress="10"
                android:max="30"
                android:enabled="false"
                android:indeterminate="false"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textView5"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="20"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false"
                android:layout_centerVertical="true"
                android:enabled="false"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Right"
                android:id="@+id/textView6"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_centerVertical="true"
                android:enabled="false"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

        <SeekBar
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar3"
                android:layout_gravity="center_horizontal"
                android:progress="10"
                android:max="30"
                android:enabled="false"
                android:indeterminate="false"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textView7"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="20"
                android:id="@+id/textView7"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false"
                android:layout_centerVertical="true"
                android:enabled="false"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Top"
                android:id="@+id/textView8"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_centerVertical="true"
                android:enabled="false"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

        <SeekBar
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar4"
                android:layout_gravity="center_horizontal"
                android:progress="10"
                android:max="30"
                android:enabled="false"
                android:indeterminate="false"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textView9"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="20"
                android:id="@+id/textView9"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false"
                android:layout_centerVertical="true"
                android:enabled="false"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Left"
                android:id="@+id/textView10"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_centerVertical="true"
                android:enabled="false"/>
    </RelativeLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="20dp"></View>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Thickness of corner boxes. (Default: 40)"
            android:id="@+id/textView13"
            android:layout_gravity="center_horizontal"
            android:enabled="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

        <SeekBar
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar5"
                android:layout_gravity="center_horizontal"
                android:progress="30"
                android:max="70"
                android:indeterminate="false"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textView11"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="40"
                android:id="@+id/textView11"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false"
                android:layout_centerVertical="true"
                android:enabled="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Corners"
                android:id="@+id/textView12"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_centerVertical="true"
                android:enabled="true"/>

    </RelativeLayout>

</LinearLayout>