<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/serviceview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <ImageView
            android:id="@+id/topLeftCorner"
            android:layout_width="@dimen/cornerThickness"
            android:layout_height="@dimen/cornerThickness"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"/>

    <ImageView
            android:id="@+id/topRightCorner"
            android:layout_width="@dimen/cornerThickness"
            android:layout_height="@dimen/cornerThickness"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"/>

    <ImageView
            android:id="@+id/topLeftMiddle"
            android:layout_width="152dp"
            android:layout_height="@dimen/barThickness"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/topLeftCorner"
            android:scaleType="fitXY"/>

    <ImageView
            android:id="@+id/topRightMiddle"
            android:layout_width="152dp"
            android:layout_height="@dimen/barThickness"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/topRightCorner"
            android:scaleType="fitXY"/>

    <ImageView
            android:id="@+id/bottomLeftCorner"
            android:layout_width="@dimen/cornerThickness"
            android:layout_height="@dimen/cornerThickness"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"/>

    <ImageView
            android:id="@+id/bottomRightCorner"
            android:layout_width="@dimen/cornerThickness"
            android:layout_height="@dimen/cornerThickness"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"/>

    <ImageView
            android:id="@+id/bottomLeftMiddle"
            android:layout_width="152dp"
            android:layout_height="@dimen/barThickness"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/bottomLeftCorner"
            android:scaleType="fitXY"/>

    <ImageView
            android:id="@+id/bottomRightMiddle"
            android:layout_width="152dp"
            android:layout_height="@dimen/barThickness"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/bottomRightCorner"
            android:scaleType="fitXY"/>

    <ImageView
            android:id="@+id/sideLeftTop"
            android:layout_width="@dimen/barThickness"
            android:layout_height="140dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/topLeftCorner"
            android:scaleType="fitXY"/>

    <ImageView
            android:id="@+id/sideLeftMiddle"
            android:layout_width="@dimen/barThickness"
            android:layout_height="160dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"/>

    <ImageView
            android:id="@+id/sideLeftBottom"
            android:layout_width="@dimen/barThickness"
            android:layout_height="140dp"
            android:layout_above="@+id/bottomLeftCorner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"/>

    <ImageView
            android:id="@+id/sideRightTop"
            android:layout_width="@dimen/barThickness"
            android:layout_height="140dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/topRightCorner"
            android:scaleType="fitXY"/>

    <ImageView
            android:id="@+id/sideRightMiddle"
            android:layout_width="@dimen/barThickness"
            android:layout_height="160dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"/>

    <ImageView
            android:id="@+id/sideRightBottom"
            android:layout_width="@dimen/barThickness"
            android:layout_height="140dp"
            android:layout_above="@+id/bottomRightCorner"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"/>
</RelativeLayout>