<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.stuartrosk.borders.app.EditFragment"
                android:id="@+id/fragmentEdit"
                android:background="#ffffff">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/themeFragmentCont"
            android:layout_centerHorizontal="true"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/themeFragmentCont"
            android:id="@+id/custom_cont"
            android:visibility="invisible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/customFragmentCont"
                android:layout_centerHorizontal="true"
                />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/custom_import_btn"
                android:background="@drawable/btn_pressed"
                android:src="@drawable/ic_archive_black_48dp"
                android:layout_marginLeft="25dp"
                android:layout_alignTop="@+id/custom_add_btn"
                android:layout_toRightOf="@+id/custom_add_btn"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/custom_add_btn"
                android:layout_below="@+id/customFragmentCont"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:background="@drawable/btn_pressed"
                android:src="@drawable/ic_library_add_black_48dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/custom_edit_btn"
                android:background="@drawable/btn_pressed"
                android:src="@drawable/ic_border_color_black_48dp"
                android:layout_alignTop="@+id/custom_add_btn"
                android:layout_toLeftOf="@+id/custom_add_btn"
                android:layout_marginRight="25dp"/>
        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:id="@+id/editDoneBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/custom_cont"/>

    </RelativeLayout>

</RelativeLayout>
