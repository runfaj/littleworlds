<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                tools:context="com.stuartrosk.littleworlds.app.HomeFragment"
                android:id="@+id/fragmentImageEdit">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/imageEditTitleTxt"
        android:layout_span="2"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:enabled="true"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/edit_box_light"
        android:layout_alignTop="@+id/scrollView"
        android:layout_alignBottom="@+id/scrollView"
        android:layout_alignLeft="@+id/scrollView"
        android:layout_alignRight="@+id/scrollView"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="-2dp"
        android:layout_marginRight="-2dp"
        android:layout_marginBottom="-2dp">
    </RelativeLayout>

    <ScrollView android:layout_width="match_parent"
            android:layout_height="match_parent"
                android:layout_below="@+id/imageEditTitleTxt"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="42dp"
                android:id="@+id/scrollView"
                android:layout_above="@+id/cancelBtn"
                android:layout_marginBottom="6dp"
                android:background="@android:color/white"
                android:layout_marginTop="15dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingRight="10dp"
            android:paddingLeft="6dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Size (px):"
                    android:id="@+id/textView21"
                    android:layout_alignParentLeft="true"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80x80"
                    android:id="@+id/sizeBtn"
                    android:layout_gravity="top|right"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textView21"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Image: "
                    android:id="@+id/textView15"
                    android:enabled="true"
                    android:layout_alignParentLeft="true"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(none)"
                    android:id="@+id/imageBtn"
                    android:layout_gravity="top|right"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textView15"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Image Alignment:"
                    android:id="@+id/textView14"
                    android:gravity="left"
                    android:enabled="true"
                    android:layout_alignParentLeft="true"/>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textView14">

                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:id="@+id/edit_radiogroup"
                        android:background="@color/edit_box_light"
                        android:layout_gravity="top|right"
                        android:layout_alignParentRight="true">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioTL"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:buttonTint="@android:color/white"
                            android:tag="topLeft"
                            android:checked="true"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioTR"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:buttonTint="@android:color/white"
                            android:tag="topRight"
                            android:checked="false"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioBR"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:buttonTint="@android:color/white"
                            android:tag="bottomRight"
                            android:checked="false"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioBL"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:buttonTint="@android:color/white"
                            android:tag="bottomLeft"
                            android:checked="false"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioC"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:buttonTint="@android:color/white"
                            android:tag="center"
                            android:checked="false"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioTM"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:buttonTint="@android:color/white"
                            android:tag="topCenter"
                            android:checked="false"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioBM"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:buttonTint="@android:color/white"
                            android:tag="bottomCenter"
                            android:checked="false"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioLM"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:buttonTint="@android:color/white"
                            android:tag="sideLeft"
                            android:checked="false"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioRM"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:buttonTint="@android:color/white"
                            android:tag="sideRight"
                            android:checked="false"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Preview: "
                    android:id="@+id/textView20"
                    android:enabled="true"
                    android:layout_alignParentLeft="true"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="300dp"
                    android:id="@+id/imageView2"
                    android:background="@color/edit_box_regular"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textView20"/>

            </RelativeLayout>

        </LinearLayout>

</ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancelBtn"
        android:layout_alignLeft="@id/scrollView"
        android:layout_alignStart="@id/scrollView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="42dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveBtn"
        android:layout_alignEnd="@+id/scrollView"
        android:layout_alignRight="@+id/scrollView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="42dp"/>
</RelativeLayout>