<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.stuartrosk.borders.CustomFragment"
                android:id="@+id/fragmentCustom"
                android:background="#ffffff">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/topLeftCornerEditBtn"
        android:tag="top_left_corner"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:rotation="90"
        android:src="@drawable/ic_mode_edit_black_48dp"
        android:scaleType="fitXY"
        android:background="@drawable/btn_pressed_gray" android:padding="7dp"/>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/topRightCornerEditBtn"
        android:tag="top_right_corner"
        android:src="@drawable/ic_mode_edit_black_48dp"
        android:layout_alignBottom="@+id/topLeftCornerEditBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:rotation="180"
        android:scaleType="fitXY"
        android:background="@drawable/btn_pressed_gray" android:padding="7dp"/>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/bottomRightCornerEditBtn"
        android:tag="bottom_right_corner"
        android:src="@drawable/ic_mode_edit_black_48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/topRightCornerEditBtn"
        android:layout_alignEnd="@+id/topRightCornerEditBtn"
        android:layout_marginBottom="40dp"
        android:rotation="270"
        android:scaleType="fitXY"
        android:background="@drawable/btn_pressed_gray" android:padding="7dp"/>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/bottomLeftCornerEditBtn"
        android:tag="bottom_left_corner"
        android:src="@drawable/ic_mode_edit_black_48dp"
        android:layout_alignBottom="@+id/bottomRightCornerEditBtn"
        android:layout_alignLeft="@+id/topLeftCornerEditBtn"
        android:layout_alignStart="@+id/topLeftCornerEditBtn"
        android:scaleType="fitXY"
        android:background="@drawable/btn_pressed_gray" android:padding="7dp"/>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/topLeftMiddleEditBtn"
        android:tag="top_left_middle"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_mode_edit_black_48dp"
        android:layout_alignTop="@+id/topLeftCornerEditBtn"
        android:layout_toRightOf="@+id/topLeftCornerEditBtn"
        android:layout_toEndOf="@+id/topLeftCornerEditBtn"
        android:layout_marginTop="-20dp"
        android:rotation="112.5"
        android:scaleType="fitXY"
        android:background="@drawable/btn_pressed_gray" android:padding="7dp"/>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/topRightMiddleEditBtn"
        android:tag="top_right_middle"
        android:src="@drawable/ic_mode_edit_black_48dp"
        android:layout_alignTop="@+id/topRightCornerEditBtn"
        android:layout_toLeftOf="@+id/topRightCornerEditBtn"
        android:layout_toStartOf="@+id/topRightCornerEditBtn"
        android:layout_marginRight="20dp"
        android:layout_marginTop="-20dp"
        android:rotation="157.5"
        android:scaleType="fitXY"
        android:background="@drawable/btn_pressed_gray" android:padding="7dp"/>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/bottomLeftMiddleEditBtn"
        android:tag="bottom_left_middle"
        android:src="@drawable/ic_mode_edit_black_48dp"
        android:layout_alignBottom="@+id/bottomLeftCornerEditBtn"
        android:layout_alignLeft="@+id/topLeftMiddleEditBtn"
        android:layout_alignStart="@+id/topLeftMiddleEditBtn"
        android:layout_marginBottom="-20dp"
        android:rotation="-22.5"
        android:scaleType="fitXY"
        android:background="@drawable/btn_pressed_gray" android:padding="7dp"/>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/bottomRightMiddleEditBtn"
        android:tag="bottom_right_middle"
        android:src="@drawable/ic_mode_edit_black_48dp"
        android:layout_alignBottom="@+id/bottomRightCornerEditBtn"
        android:layout_alignRight="@+id/topRightMiddleEditBtn"
        android:layout_alignEnd="@+id/topRightMiddleEditBtn"
        android:layout_marginBottom="-20dp"
        android:rotation="-67.5"
        android:scaleType="fitXY"
        android:background="@drawable/btn_pressed_gray" android:padding="7dp"/>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/sideLeftMiddleEditBtn"
        android:tag="side_left_middle"
        android:src="@drawable/ic_mode_edit_black_48dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/topLeftCornerEditBtn"
        android:layout_alignStart="@+id/topLeftCornerEditBtn"
        android:layout_marginLeft="-20dp"
        android:rotation="45"
        android:scaleType="fitXY"
        android:background="@drawable/btn_pressed_gray" android:padding="7dp"/>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/sideRightMiddleEditBtn"
        android:tag="side_right_middle"
        android:src="@drawable/ic_mode_edit_black_48dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/topRightCornerEditBtn"
        android:layout_alignEnd="@+id/topRightCornerEditBtn"
        android:layout_marginRight="-20dp"
        android:rotation="225"
        android:scaleType="fitXY"
        android:background="@drawable/btn_pressed_gray" android:padding="7dp"/>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/sideLeftTopEditBtn"
        android:tag="side_left_top"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_mode_edit_black_48dp"
        android:layout_below="@+id/topLeftCornerEditBtn"
        android:layout_alignLeft="@+id/topLeftCornerEditBtn"
        android:layout_alignStart="@+id/topLeftCornerEditBtn"
        android:layout_marginLeft="-20dp"
        android:rotation="67.5"
        android:scaleType="fitXY"
        android:background="@drawable/btn_pressed_gray" android:padding="7dp"/>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/sideRightTopEditBtn"
        android:tag="side_right_top"
        android:src="@drawable/ic_mode_edit_black_48dp"
        android:layout_alignTop="@+id/sideLeftTopEditBtn"
        android:layout_alignRight="@+id/topRightCornerEditBtn"
        android:layout_alignEnd="@id/topRightCornerEditBtn"
        android:layout_marginRight="-20dp"
        android:rotation="202.5"
        android:scaleType="fitXY"
        android:background="@drawable/btn_pressed_gray" android:padding="7dp"/>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/sideLeftBottomEditBtn"
        android:tag="side_left_bottom"
        android:src="@drawable/ic_mode_edit_black_48dp"
        android:layout_above="@+id/bottomLeftCornerEditBtn"
        android:layout_alignLeft="@+id/bottomLeftCornerEditBtn"
        android:layout_alignStart="@+id/bottomLeftCornerEditBtn"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="-20dp"
        android:rotation="22.5"
        android:scaleType="fitXY"
        android:background="@drawable/btn_pressed_gray" android:padding="7dp"/>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/sideRightBottomEditBtn"
        android:tag="side_right_bottom"
        android:src="@drawable/ic_mode_edit_black_48dp"
        android:layout_alignTop="@+id/sideLeftBottomEditBtn"
        android:layout_alignRight="@+id/bottomRightCornerEditBtn"
        android:layout_alignEnd="@+id/bottomRightCornerEditBtn"
        android:layout_marginRight="-20dp"
        android:rotation="-112.5"
        android:scaleType="fitXY"
        android:background="@drawable/btn_pressed_gray" android:padding="7dp"/>

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Theme Name"
            android:id="@+id/theme_name_label_tv"
            android:editable="false"/>
        <android.support.v7.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/theme_name_tv"
            android:text="Custom Theme"
            android:editable="true"
            android:enabled="true"
            android:layout_below="@+id/theme_name_label_tv"
            android:gravity="center_horizontal"/>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Preview Image"
            android:id="@+id/preview_image_label_tv"
            android:editable="false"
            android:layout_below="@+id/theme_name_tv"
            android:layout_marginTop="12dp"/>
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="170dp"
            android:layout_height="32dp"
            android:id="@+id/preview_image"
            android:layout_below="@+id/preview_image_label_tv"
            android:layout_marginTop="6dp"
            android:background="#efefef"
            android:scaleType="fitCenter"/>
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:id="@+id/preview_edit_btn"
            android:tag="preview"
            android:src="@drawable/ic_mode_edit_black_48dp"
            android:scaleType="fitXY"
            android:background="@drawable/btn_pressed_white"
            android:layout_alignRight="@+id/preview_image"
            android:layout_alignTop="@+id/preview_image"
            android:padding="5dp"
            android:layout_marginTop="-5dp"
            android:layout_marginRight="-8dp"/>
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/custom_save_btn"
            android:background="@drawable/btn_pressed"
            android:src="@drawable/ic_check_black_48dp"
            android:layout_alignTop="@+id/custom_export_btn"
            android:layout_toLeftOf="@+id/custom_export_btn"
            android:layout_marginRight="14dp" android:padding="7dp"/>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/custom_delete_btn"
            android:background="@drawable/btn_pressed"
            android:src="@drawable/ic_delete_black_48dp"
            android:layout_alignTop="@+id/custom_export_btn"
            android:layout_toRightOf="@+id/custom_export_btn"
            android:layout_marginLeft="14dp" android:padding="7dp"/>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/custom_export_btn"
            android:background="@drawable/btn_pressed"
            android:src="@drawable/ic_unarchive_black_48dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/preview_image" android:layout_marginTop="14dp" android:padding="7dp"/>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="You can also edit themes directly in the Borders/Themes folder as well as find additional resources."
            android:id="@+id/textView4"
            android:layout_below="@+id/custom_save_btn"
            android:layout_marginTop="14dp"/>

    </RelativeLayout>

</RelativeLayout>
